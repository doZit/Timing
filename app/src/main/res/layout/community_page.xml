<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/publish_back"
            style="@style/ButtonStyleNormal"
            android:layout_marginLeft="15dp"
            android:background="@drawable/back"/>
        <Button
            android:id="@+id/card_search"
            style="@style/ButtonStyleNormal"
            android:layout_marginLeft="300dp"
            android:background="@drawable/search"/>
    </LinearLayout>

    <View
        style="@style/LineStyle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/pic_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/one"/>
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/name"
                style="@style/TextNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"/>
            <TextView
                android:id="@+id/address"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                style="@style/TextSmallLittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址：aaaaaa"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextSmallLittle"
                android:singleLine="true"
                android:text="电话：aaaaaaa"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">
            <TextView
                android:id="@+id/detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/tab_release_color"
                android:text="社区详情>>>"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="55dp" />
            <TextView
                android:id="@+id/community_concern"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:background="@drawable/border_text"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"
                android:text="关注"/>
        </LinearLayout>
    </LinearLayout>
    <View
        style="@style/LineStyle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/me_navigation"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        app:tabGravity="center"
        app:tabMaxWidth="0dp"
        app:tabIndicatorColor="@color/theme_color"
        app:tabTextColor="@color/tab_release_color"
        app:tabSelectedTextColor="@color/black"
        app:tabTextAppearance="@style/TabTextStyle"
        app:tabMode="scrollable">
    </com.google.android.material.tabs.TabLayout>
    <View
        style="@style/LineStyle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="480dp">
    </androidx.recyclerview.widget.RecyclerView>
    <View
        style="@style/LineStyle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/publish_card"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal"
            android:gravity="center|left"
            android:background="@drawable/publish_label_border">
            <ImageView
                style="@style/ButtonStyleSpecial"
                android:background="@drawable/publish_at_com"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="发一贴来探讨兴趣"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/me_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/community_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/me_release"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="我的"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>