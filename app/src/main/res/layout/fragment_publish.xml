<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".publish.PublishActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/publish_back"
        style="@style/ButtonStyleNormal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/back"/>
    <View
        style="@style/LineStyle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>
    <EditText
        android:id="@+id/text_edit"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:hint="请输入文本内容"
        android:gravity="top|left"
        android:background="@null"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/images_view"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/add_label"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="# 话题"
            style="@style/PublishLittleTextStyle"
            android:background="@drawable/publish_label_border"/>
        <TextView
            android:id="@+id/add_account"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            style="@style/PublishLittleTextStyle"
            android:text="\@ 用户"
            android:background="@drawable/publish_label_border"/>
        <LinearLayout
            android:id="@+id/add_local"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/publish_label_border">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/location"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PublishLittleTextStyle"
                android:text="添加地点"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp">
        <LinearLayout
            android:id="@+id/save_in_draft"
            style="@style/LinkInfoStyleLL"
            android:layout_marginRight="50dp">
            <ImageView
                android:id="@+id/community_count"
                style="@style/ButtonStyleNormal"
                android:layout_marginLeft="8dp"
                android:background="@drawable/draftbox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="存草稿"/>
        </LinearLayout>
        <TextView
            android:id="@+id/publish"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:text="发布笔记"
            android:gravity="center"
            android:background="@drawable/publish_button_border"
            style="@style/TextNormal"/>
    </LinearLayout>
</LinearLayout>