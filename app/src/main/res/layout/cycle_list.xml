<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/community_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/blank_photo"/>
        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="8dp">
            <TextView
                android:id="@+id/community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="null"/>
            <TextView
                android:id="@+id/community_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_marginTop="5dp"
                android:textColor="@color/tab_release_color"
                android:text="null"/>
        </LinearLayout>
        <TextView
            android:id="@+id/community_join"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:text="加入"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingLeft="10dp"
            android:paddingTop="2dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/search_text_border"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/tab_release_color"/>

</LinearLayout>